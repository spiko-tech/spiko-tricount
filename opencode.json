{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "nx-mcp": {
      "type": "local",
      "command": ["npx", "nx-mcp@latest", "."],
      "enabled": true
    },
    "effect-docs": {
      "type": "local",
      "command": ["npx", "-y", "effect-mcp@latest"],
      "enabled": true
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": ["npx", "-y", "chrome-devtools-mcp@latest"],
      "enabled": true
    },
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    }
  }
}
