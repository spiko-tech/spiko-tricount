{
  "name": "@spiko-tricount/server",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "nx": {
    "targets": {
      "dev": {
        "executor": "nx:run-commands",
        "options": {
          "command": "tsx watch server/src/main.ts",
          "cwd": "{workspaceRoot}"
        }
      },
      "build": {
        "executor": "nx:run-commands",
        "outputs": [
          "{workspaceRoot}/server/dist"
        ],
        "options": {
          "commands": [
            "esbuild server/src/main.ts --bundle --platform=node --format=esm --outfile=server/dist/main.js --packages=external"
          ],
          "cwd": "{workspaceRoot}"
        }
      },
      "serve": {
        "executor": "nx:run-commands",
        "options": {
          "command": "node server/dist/main.js",
          "cwd": "{workspaceRoot}"
        },
        "dependsOn": [
          "build"
        ]
      }
    }
  },
  "dependencies": {
    "@spiko-tricount/api": "workspace:*"
  }
}
